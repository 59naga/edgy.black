// themes
theme_light()
  color #333
  background-color whitesmoke
theme_dark()
  color #ccc
  background-color #333
theme_sepia()
  color #596256
  background-color #e0dbda
theme_highlight()
  color maroon
  background-color cornsilk

// keyframes
ng-hide(name='fade',time=.5s)
  &.ng-hide-remove
    animation name+'In' time
  &.ng-hide-add
    animation name+'Out' time

// display width height margin padding
central(textAlign=center)
  absolute 0 0 0 0
  margin auto
  text-align textAlign

tile(volume=15)
  font-size 0
  a
    display inline-block
    font-size initial
  
  @media (orientation: portrait)
    margin unit(volume/6,'vw')
  @media (orientation: landscape)
    margin unit(volume/6,'vh')
    
  a
    margin unit(volume/3*0.1,'rem')
    
    position relative
    svg
    img
      central()
      object-fit contain
  
  @media (orientation: portrait)
    a
      size unit(volume,'vw')
      svg
      img
        width unit(volume,'vw')
        max-height unit(volume,'vw')
    
  @media (orientation: landscape)
    a
      size unit(volume,'vh')
      svg
      img
        width unit(volume,'vh')
        max-height unit(volume,'vh')

notify()
  theme_sepia()
  display block
  margin 1em
  padding .5em
    
fig(contentFlex=2)
  display flex
  
  figure
    flex 1
    >img
    >svg
      display block // fix auto margin-top
      size 100%
  figcaption
    flex contentFlex
    
form()
  central(left)
  size 90vw 56vh
  min-height 14em

  fig()
  
  theme_light()
  figure
    theme_sepia()
    a
      display block
      text-align center
      font-size .5em
      line-height @height
      overflow ellipsis
      svg
        size 100%
        max-height 50vh
  figcaption
    padding 0!important
    
    >footer
      padding 1em 0
      
      text-align center
      
      > *
        margin-right .5em

letter()
  footer_height= .5rem
  button_fontsize= 50%
  button_width= 5em
  fig()
  
  pre
    theme_light()
  
  button
    font-size button_fontsize
    min-width button_width
    
  relative 0
  padding-bottom footer_height
  footer
    absolute false button_width 0 false
    height footer_height
    
    font-size button_fontsize

chat(useTheme=true)
  >*
    &:nth-child(even)
      if useTheme
        theme_sepia()
        figcaption
          // background-color inherit
    
    >*
      padding .5em 0
      
      fig()
      figure
      figcaption
        padding 0 .5em
        
        footer
          text-align right
          
      .from
      .to
        padding 0 .5em
        display block
        flex .5
        svg
          size 100%
      
      figcaption
        font-size 65%
      figcaption+figure
        text-align right
      
      time
        font-size xx-small
        
      h3
        font-size 50%
        width 100%
        overflow hidden
        white-space nowrap
        // overflow ellipsis

overlay()
  fixed 0
  margin auto
  background-color alpha(#333,.75)

active()
  theme_light()
  
  overflow ellipsis
  width 8em
  opacity 1

hostname()
  display inline-block
  min-width 12em
