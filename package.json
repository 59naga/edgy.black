{
  "name": "edgy.black",
  "main": "edgy.black.coffee",
  "scripts": {
    "prestart": "pm2 kill",
    "start": "pm2 start edgy.black.coffee --name edgy.black",
    "poststart": "pm2 list && pm2 logs",

    "watch":"abigail test/**/*.coffee:test -e",
    "pretest": "npm run build",
    "test": "jasminetea test --recursive --e2e '==baseUrl http://localhost:59798' --verbose --timeout 20000",

    "stop": "pm2 stop edgy.black",
    "poststop": "pm2 kill && pm2 flush",

    "deploy": "curl -d key=$APPS_KEY -d sha1=$(git log --format=format:%H -1) -d host=$(jqn package name) http://travis.edgy.black",
    "deploy_local": "curl -d key=local -d sha1=$(git log --format=format:%H -1) -d host=$(jqn package name) -d force=true http://localhost:59999",

    "build": "onefile --json --output client/public/pkgs -cms"
  },
  "dependencies": {
    "browserify": "^9.0.3",
    "coffeeify": "^1.0.0",
    "connect-redis": "^2.2.0",
    "debug": "^2.1.3",
    "express": "^4.12.3",
    "express-session": "^1.10.4",
    "jade": "^1.9.2",
    "kouto-swiss": "^0.11.9",
    "mime": "^1.3.4",
    "multer": "^0.1.8",
    "mysql": "^2.6.0",
    "oauth": "^0.9.12",
    "passport": "^0.2.1",
    "passport-twitter": "^1.0.3",
    "sequelize": "^2.0.5",
    "stylus": "^0.50.0",
    "wanderer": "0.0.2",
    "yamljs": "^0.2.1"
  },
  "devDependencies": {
    "abigail": "0.0.7",
    "jasminetea": "^0.1.27",
    "jqn": "0.0.3",
    "onefile": "^0.2.11",
    "pm2": "^0.12.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/59naga/edgy.black.git"
  },
  "author": "59naga <i59naga@icloud.com> (http://berabou.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/59naga/edgy.black/issues"
  },
  "homepage": "https://github.com/59naga/edgy.black"
}
